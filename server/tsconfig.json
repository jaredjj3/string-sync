{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dst",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "lib": ["es2015"],
    "paths": {
      "@/*": ["src/*"],
      "common/*": ["../common/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
